<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--  Background para todas mis pantallas -->
        <item name="android:windowBackground">@drawable/window_bg</item>

    </style>

    <!--  Estilo para todos mis botones -->
    <style name="ButtonAccent" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_accent</item>
    </style>

</resources>
